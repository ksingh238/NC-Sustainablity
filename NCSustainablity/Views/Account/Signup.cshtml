
@{
    Layout = null;
}

<!doctype html>
<html class="no-js " lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="description" content="Responsive Bootstrap 4 and web Application ui kit.">

    <title>:: NC Sustainability  Admin ::</title>
    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <!-- Custom Css -->
    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/main.css">
    <link rel="stylesheet" href="~/assets/css/authentication.css">
    <link rel="stylesheet" href="~/assets/css/color_skins.css">
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <style>
        .text-danger {
            color: #e81414 !important;
            font-weight: 700;
        }
        .text-success {
            color: #abe8a8 !important;
            font-weight: bold;
            color: #abe8a8 !important;
            font-weight: bold;
            margin-top: -18px;
            margin-left: -149px;
        }

    </style>
</head>

<body class="theme-blush authentication sidebar-collapse">
    @{ 
        if(ViewBag.error == "exist")
        {
            <script>
                alert("Email already exists");
            </script>
        }
    }
    <div class="page-header">
        <div class="page-header-image" style="background-image:url(assets/images/login.jpg)"></div>
        <div class="container">
            <div class="col-md-12 content-center">
                <div class="card-plain">
                    <form class="form" method="post" action="@Url.Action("Signup","Account")">
                        <div class="header">
                            <div class="logo-container">
                                <img src="~/assets/images/logo.jpg" alt="">
                            </div>
                            <h5>Sign Up</h5>
                            <span>Register new Student</span>
                        </div>
                        <div class="content">
                            <div class="input-group">
                                <input type="text" name="FName" class="form-control" placeholder="Enter FirstName">

                            </div>
                            <div class="input-group">
                                <input type="text" name="LName" class="form-control" placeholder="Enter LastName">

                            </div>
                            <div class="input-group">

                                <input type="text" name="Email" id="email" class="form-control" placeholder="Enter Email">
                                <label id="error" hidden class="text-danger">This is not a valid email address. valid Email example <span style="color:blue;">"example@gmail.com"</span>.</label>
                                
                            </div>
                            <div class="input-group">
                                <input type="password" name="Password" placeholder="Password" class="form-control" />
                            </div>
                            <div class="input-group">
                                <input type="number" name="PhoneNo" placeholder="Phone No" class="form-control" />
                            </div>
                        </div>
                        <div class="footer text-center">
                            <button type="submit" id="subbtn" class="btn btn-primary btn-round btn-lg btn-block waves-effect waves-light">SIGN UP</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
       
    </div>

    <!-- Jquery Core Js -->
    <script src="~/assets/bundles/libscripts.bundle.js"></script>
    <script src="~/assets/bundles/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
    <script>
        
        $("#email").on("input", function () {
            var myemail = $("#email").val();
            if (myemail.length > 0) {
                if (/@@gmail.com\s*$/.test(myemail)) {
                    $("#error").attr("hidden", true);
                    $("#subbtn").attr("disabled", false);
                }
                else {
                    $("#error").attr("hidden", false);
                    $("#subbtn").attr("disabled", true);
                }
            }
        });

    </script>
    <script>
   $(".navbar-toggler").on('click',function() {
    $("html").toggleClass("nav-open");
});
    </script>
</body>
</html>